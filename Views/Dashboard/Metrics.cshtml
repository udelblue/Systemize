@model Systemize.Models.ViewModel.Dashboard.MetricsEntire

@{
    ViewData["Title"] = "Metrics";
}

<h5>Workflow Metrics</h5>

<canvas id="myChart" width="400" height="200"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        var xValues = []  ; //["Stage 1", "Stage 2", "Stage 3", "Stage 4", "Stage 5"];
        var yValues = []; //[30, 49, 44, 24, 35];
        //const barColors = ["red", "green","blue","orange","brown"];

        @foreach (var item in Model.Rows)
        {
            <text>
                xValues.push('@item.StageName.ToString()');
                yValues.push(@item.StageValue);
            </text>
        }

        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: xValues,
                datasets: [{
                    label: '@Model.workflowName',
                    data: yValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Hours Spent at Stage'
                        }
                    },
                    y: {

                        title: {
                            display: true,
                            text: 'Stage'
                        }
                    }
                }
            }
        });
    </script>
}


