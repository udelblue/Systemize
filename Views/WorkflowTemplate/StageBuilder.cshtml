@{
    ViewData["Title"] = "Add a Stage";
}


    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <style>
        .sortable, .draggable {
            min-height: 200px;
            padding: 10px;
            border: 1px solid #ccc;
            background-color: #f9f9f9;
        }
        .sortable {
            list-style-type: none;
        }
        .sortable li {
            margin: 5px;
            padding: 5px;
            border: 1px solid #ddd;
            background-color: #fff;
        }
    </style>


<h1>Stage Builder</h1>
<section> 
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h4>Current Stages</h4>
                <ul id="sortable" class="sortable">
                    <li class="ui-state-default">Stage 1</li>
                    <li class="ui-state-default">Stage 2</li>
                    <li class="ui-state-default">Stage 3</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h4>Draggable Stages</h4>
                <ul id="draggable" class="sortable">
                    <li class="ui-widget-content">New Stage 1</li>
                    <li class="ui-widget-content">New Stage 2</li>
                    <li class="ui-widget-content">New Stage 3</li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        $(function() {
            $("#sortable").sortable({
                placeholder: "ui-state-highlight"
            }).disableSelection();

            $(".ui-widget-content").draggable({
                connectToSortable: "#sortable",
                helper: "clone",
                revert: "invalid"
            });

            $("ul, div").disableSelection();
        });
    </script>
</section>




