
@* _Chat.cshtml *@
@{
    Layout = null; // Adjust if this view is part of a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                Chat
            </div>
            <div class="card-body" id="chatWindow" style="height: 300px; overflow-y: auto; border: 1px solid #ddd;">
                <!-- Chat messages will appear here -->
            </div>
            <div class="card-footer">
                <div class="input-group">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." />
                    <button id="sendButton" class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Handle send button click
            $('#sendButton').click(function () {
                const message = $('#messageInput').val().trim();
                if (message) {
                    // Append the message to the chat window
                    $('#chatWindow').append('<div class="text-end mb-2"><span class="badge bg-primary">' + message + '</span></div>');
                    $('#messageInput').val(''); // Clear the input
                    $('#chatWindow').scrollTop($('#chatWindow')[0].scrollHeight); // Scroll to the bottom
                }
            });

            // Handle Enter key press in the input field
            $('#messageInput').keypress(function (e) {
                if (e.which === 13) { // Enter key
                    $('#sendButton').click();
                }
            });
        });
    </script>
</body>
</html>
