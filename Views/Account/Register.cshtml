@model Systemize.Models.ViewModel.Identity.RegisterViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-4">
        <form asp-action="Register" method="post" class="p-4 border rounded shadow-sm bg-light">
            <h3 class="text-center mb-4">Register</h3>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
            <div class="text-center">
                <small>
                    Already have an account?
                    <a asp-action="Login" class="text-decoration-none">Login here</a>
                </small>
            </div>
        </form>
    </div>
</div>